<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.rit.smartFridge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".SmartFridgeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemListActivity"
            android:label="@string/inventory_name" >
        </activity>
        <activity
            android:name=".ShoppingListActivity"
            android:label="@string/shoppingList_name" >
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="Test" >
        </activity>
        <activity
            android:name=".ListAddActivity"
            android:label="@string/list_add_message"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".ListRemoveActivity"
            android:label="@string/list_remove_message"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>